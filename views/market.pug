doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Биржа
    // CSS
    link(rel='stylesheet', href='css/market.css')
    link(rel='stylesheet', href='css/navbar.css')
    link(rel='stylesheet', href='css/styles.css')
  body.bg
    header
      .wrapper.clearfix
        .logo
          span
            a(href='/') Freelance
        .sign-in-up
          .sign_absolute
            if username
              span.login #{username}
            else 
              a(href='sign_in') Войти
              span /
              a(href='sign_up') Зарегистрироваться
    .sect-wrap.clearfix
      .wrapp.clearfix
        include sidebar
        .mainw.clearfix
          .tit
            h1 Биржа
          .filter
            .budget
              h3 Бюджет
              form(action='')
                input(type='text', name='from')
                input(type='text', name='to')
                input(type='submit', value='Поиск')
          .market
            if tasks
              for task in tasks
                .task
                  a(href=`/market/${task.id}` class="task-head") #{task.title}
                  p.task-text #{task.text}
                  .flex-container
                    p.price 
                      span.bg-price $#{task.price}
                    p.name #{task.username}
            else 
              h3 Задач нет
							
